{
  "manifest_version": 3,
  "name": "Post Compass",
  "version": "0.1.0",
  "description": "Rewrite raw thoughts with AI and discover the best communities to post them.",
  "action": {
    "default_title": "Open Post Compass Sidebar"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "permissions": ["storage", "activeTab", "clipboardWrite", "sidePanel", "tabs"],
  "host_permissions": [
    "https://text.pollinations.ai/*"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "styles/sidebar.css", "scripts/sidebar.js", "scripts/services/ai.js", "scripts/services/suggester.js", "scripts/services/researcher.js"],
      "matches": ["<all_urls>"]
    }
  ]
}


