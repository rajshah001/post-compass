{
  "manifest_version": 3,
  "name": "Post Compass",
  "version": "0.1.0",
  "description": "Rewrite raw thoughts with AI and discover the best communities to post them.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab", "scripting", "clipboardWrite"],
  "host_permissions": [
    "https://text.pollinations.ai/*",
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://www.reddit.com/*",
    "https://reddit.com/*",
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "styles/sidebar.css", "scripts/sidebar.js", "scripts/services/ai.js", "scripts/services/suggester.js"],
      "matches": ["<all_urls>"]
    }
  ]
}


